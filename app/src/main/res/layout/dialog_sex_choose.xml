<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_42"
        android:background="@color/dialogTitleBg"
        android:gravity="center_vertical|right">

        <TextView
            android:id="@+id/text_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_14"
            android:text="完成"
            android:textColor="@color/colorTaskerNick"
            android:textSize="@dimen/text_14" />

    </LinearLayout>

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wheel_picker_sex"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:wheel_curved="true"
        app:wheel_cyclic="false"
        app:wheel_indicator="true"
        app:wheel_indicator_size="1dp"
        app:wheel_item_text_size="@dimen/text_14"
        app:wheel_visible_item_count="5"

        />


</LinearLayout>
