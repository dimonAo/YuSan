<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/common_36"
       android:layout_marginLeft="@dimen/common_14">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#afb2b8"
           android:textSize="@dimen/text_12"
           android:text="问题和意见"/>

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_172"
        android:layout_marginTop="@dimen/common_8"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_172"
            android:layout_marginBottom="@dimen/common_14"
            >

            <EditText
                android:id="@+id/ed_feedback_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_172"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/common_14"
                android:layout_marginRight="@dimen/common_14"
                android:paddingTop="@dimen/common_18"
                android:background="@color/colorWhite"
                android:gravity="start"
                android:hint="我们期待您的反馈"
                android:maxLines="200"
                android:textColorHint="#d1d1d6"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tv_feedback_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#dfdfe3"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/common_14"
                android:layout_marginBottom="@dimen/common_8"
                android:textSize="@dimen/text_8"
                android:text="200个字"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_26"
        android:gravity="center">
        <Button
            android:id="@+id/btn_feedback_submit"
            android:layout_width="@dimen/common_300"
            android:layout_height="@dimen/common_40"
            android:background="@drawable/selector_task_btn"
            android:text="提交"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
</LinearLayout>