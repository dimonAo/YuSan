<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lin_me_fragment_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">


        <com.wtwd.yusan.widget.view.ArcImageView
            android:id="@+id/img_me_head_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_240"
            android:background="@color/colorWhite"
            app:arcHeight="@dimen/common_44" />
        <!-- <View
             android:background="@color/cardview_dark_background"
             android:layout_width="match_parent"
             android:layout_height="@dimen/common_240"/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

            <include layout="@layout/tool_bar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/common_86"
                android:layout_height="@dimen/common_86"
                android:gravity="center">

                <com.wtwd.yusan.widget.view.CircleImageView
                    android:id="@+id/img_head_me"
                    android:layout_width="@dimen/common_76"
                    android:layout_height="@dimen/common_76"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/task_head"
                    app:border_color="@color/alpha_black_43"
                    app:border_width="@dimen/common_4" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_me_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_12"
                android:text="小甜甜"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16" />
        </LinearLayout>


    </RelativeLayout>

    <!--<ImageView-->
    <!--android:layout_width="@dimen/common_16"-->
    <!--android:layout_height="@dimen/common_16"-->
    <!--android:layout_marginRight="@dimen/common_14"-->
    <!--android:layout_marginTop="@dimen/common_14"-->
    <!--android:src="@mipmap/me_edit" />-->
    <!--<LinearLayout-->
    <!--android:id="@+id/img_me_head_bg"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="250dp"-->
    <!--android:orientation="vertical">-->
    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_me_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_46"
            android:layout_below="@+id/img_me_head_bg"
            android:background="@drawable/selector_lin_click_bg"
            android:paddingLeft="@dimen/common_14"
            android:paddingRight="@dimen/common_14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/common_28"
                    android:layout_height="@dimen/common_28"
                    android:layout_marginRight="@dimen/common_12"
                    android:src="@mipmap/me_money" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/me_purse"
                    android:textColor="#262626"
                    android:textSize="@dimen/text_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_16"
                        android:text="@string/balance_196_00"
                        android:textColor="#999999" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/right_row" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_me_help_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_46"
            android:layout_below="@+id/lin_me_money"
            android:background="@drawable/selector_lin_click_bg"
            android:paddingLeft="@dimen/common_14"
            android:paddingRight="@dimen/common_14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/common_28"
                    android:layout_height="@dimen/common_28"
                    android:layout_marginRight="@dimen/common_12"
                    android:src="@mipmap/me_help_feedback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/me_help_and_feedback"
                    android:textColor="#262626"
                    android:textSize="@dimen/text_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/right_row" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_me_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_46"
            android:layout_below="@id/lin_me_help_feedback"
            android:background="@drawable/selector_lin_click_bg"
            android:paddingLeft="@dimen/common_14"
            android:paddingRight="@dimen/common_14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/common_28"
                    android:layout_height="@dimen/common_28"
                    android:layout_marginRight="@dimen/common_12"
                    android:src="@mipmap/me_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/set_title"
                    android:textColor="#262626"
                    android:textSize="@dimen/text_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/right_row" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>