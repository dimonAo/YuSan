<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wtwd.yusan.activity.PublishTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/task_bg"
        android:orientation="vertical">

        <include layout="@layout/tool_bar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44"
                android:background="@drawable/selector_lin_click_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_14"
                    android:text="性别"
                    android:textColor="@color/colorTaskerNick"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:background="@mipmap/publish_right_arrow" />

                <TextView
                    android:id="@+id/text_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:layout_toLeftOf="@id/img_1"
                    android:text="限男生"
                    android:textColor="@color/colorTaskContent_9"
                    android:textSize="@dimen/text_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/common_14"
                android:background="@color/recycler_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_14"
                    android:layout_marginTop="@dimen/common_14"
                    android:text="任务类型"
                    android:textColor="@color/colorTaskerNick"
                    android:textSize="@dimen/text_14" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_task_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_64"
                    android:layout_marginBottom="@dimen/common_14"
                    android:layout_marginLeft="@dimen/common_14"
                    android:layout_marginTop="@dimen/common_14" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/common_14"
                android:background="@color/recycler_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_14"
                    android:text="人数"
                    android:textColor="@color/colorTaskerNick"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:background="@mipmap/publish_right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:layout_toLeftOf="@id/img_3"
                    android:text="1"
                    android:textColor="@color/colorTaskContent_9"
                    android:textSize="@dimen/text_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/common_14"
                android:background="@color/recycler_line"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/relative_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44"
                android:background="@drawable/selector_lin_click_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_14"
                    android:text="时间"
                    android:textColor="@color/colorTaskerNick"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:background="@mipmap/publish_right_arrow" />

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:layout_toLeftOf="@id/img_2"
                    android:text="今天18:00"
                    android:textColor="@color/colorTaskContent_9"
                    android:textSize="@dimen/text_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/common_14"
                android:background="@color/recycler_line" />

            <RelativeLayout
                android:id="@+id/relative_cost"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44"
                android:background="@drawable/selector_lin_click_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_14"
                    android:text="红包"
                    android:textColor="@color/colorTaskerNick"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/img_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:background="@mipmap/publish_right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:layout_toLeftOf="@id/img_4"
                    android:text="5元"
                    android:textColor="@color/colorTaskContent_9"
                    android:textSize="@dimen/text_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/common_14"
                android:background="@color/recycler_line" />

            <RelativeLayout
                android:id="@+id/relative_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44"
                android:background="@drawable/selector_lin_click_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_14"
                    android:text="所在地"
                    android:textColor="@color/colorTaskerNick"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/img_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:background="@mipmap/publish_right_arrow" />

                <TextView
                    android:id="@+id/text_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:layout_toLeftOf="@id/img_5"
                    android:text="深圳"
                    android:textColor="@color/colorTaskContent_9"
                    android:textSize="@dimen/text_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/common_14"
                android:background="@color/recycler_line" />

            <RelativeLayout
                android:id="@+id/relative_anonymous"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44"
                android:background="@drawable/selector_lin_click_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_14"
                    android:text="匿名"
                    android:textColor="@color/colorTaskerNick"
                    android:textSize="@dimen/text_14" />

                <com.wtwd.yusan.widget.view.SwitchView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/common_4"
                    android:layout_marginRight="@dimen/common_14"
                    android:layout_marginTop="@dimen/common_4"
                    app:hasShadow="true"
                    app:isOpened="false"
                    app:offColor="@color/colorTaskContent_9"
                    app:offColorDark="@color/colorTaskContent_9"
                    app:primaryColor="@color/colorTask"
                    app:primaryColorDark="@color/colorTask" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/common_14"
                android:background="@color/recycler_line" />

            <RelativeLayout
                android:id="@+id/relative_publish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44"
                android:background="@drawable/selector_lin_click_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_14"
                    android:text="发给谁"
                    android:textColor="@color/colorTaskerNick"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/img_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:background="@mipmap/publish_right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_14"
                    android:layout_toLeftOf="@id/img_7"
                    android:text="所有人"
                    android:textColor="@color/colorTaskContent_9"
                    android:textSize="@dimen/text_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/common_14"
                android:background="@color/recycler_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_14"
                    android:layout_marginTop="@dimen/common_14"
                    android:text="任务说明"
                    android:textColor="@color/colorTaskerNick"
                    android:textSize="@dimen/text_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_58"
                    android:layout_marginLeft="@dimen/common_14"
                    android:layout_marginRight="@dimen/common_14"
                    android:layout_marginTop="@dimen/common_14"
                    android:background="@drawable/shape_edit_rect_bg">

                    <EditText
                        android:id="@+id/edit_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/common_10"
                        android:layout_marginTop="@dimen/common_8"
                        android:background="@null"
                        android:gravity="top|left"
                        android:hint="说点什么吧..."
                        android:textColor="@color/colorTaskContent"
                        android:textColorHint="@color/colorTaskContent_9"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/text_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/common_8"
                        android:layout_marginRight="@dimen/common_10"
                        android:text="0/15个字"
                        android:textColor="@color/colorCountText"
                        android:textSize="@dimen/text_8" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_14"
                    android:layout_marginTop="@dimen/common_8"
                    android:text="发布任务的金额越高,任务排名越靠前"
                    android:textColor="@color/colorAlertTask"
                    android:textSize="@dimen/text_10" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_publish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_44"
                android:layout_marginBottom="@dimen/common_30"
                android:layout_marginLeft="@dimen/common_14"
                android:layout_marginRight="@dimen/common_14"
                android:layout_marginTop="@dimen/common_18"
                android:background="@drawable/selector_task_btn"
                android:gravity="center"
                android:text="发布任务"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
