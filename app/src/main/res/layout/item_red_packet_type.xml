<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_redpacket_head"
            android:layout_width="@dimen/common_16"
            android:layout_height="@dimen/common_18"
            android:layout_marginRight="@dimen/common_14"
            android:src="@mipmap/redpacket_yue" />

        <TextView
            android:id="@+id/tv_redpacket_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="@dimen/text_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/ck_redpacket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common_14"
                android:button="@drawable/selector_check_box"
                android:clickable="false" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>