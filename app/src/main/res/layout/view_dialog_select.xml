<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/common_4">

    <TextView
        android:id="@+id/mTv_Title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:layout_marginTop="@dimen/common_4"
        android:background="@drawable/dialog_item_bg_only"
        android:gravity="center"
        android:padding="@dimen/common_8"
        android:textColor="@color/dialogContentBg"
        android:textSize="@dimen/text_10" />

    <ListView
        android:id="@+id/dialog_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_4"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#DAD9DB"
        android:dividerHeight="0.5dp"
        android:listSelector="@android:color/transparent" />

    <Button
        android:id="@+id/mBtn_Cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_40"
        android:layout_marginTop="5dip"
        android:background="@drawable/dialog_item_bg_only"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_14" />

</LinearLayout>