<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/task_bg">

        <include layout="@layout/tool_bar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/mypacket_bg"
        android:layout_margin="@dimen/common_14"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_14"
            android:layout_marginLeft="@dimen/common_14"
            android:layout_marginRight="@dimen/common_14">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/common_16"
                    android:layout_height="@dimen/common_18"
                    android:src="@mipmap/redpacket_yue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_6"
                    android:textSize="@dimen/text_14"
                    android:textColor="#fbc200"
                    android:text="余额"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_mypacket_detail"
                android:layout_width="@dimen/common_34"
                android:layout_height="@dimen/common_18"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/text_12"
                android:textColor="#fbc200"
                android:layout_centerVertical="true"
                android:text="明细"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="0.00"
                    android:layout_gravity="bottom"

                    android:textSize="@dimen/common_32"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="元"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/common_16"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lin_mypacket_recharge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/common_42"
                android:gravity="center"
                android:background="@drawable/selector_mypacket_left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_16"
                    android:textColor="#ffffff"
                    android:text="充值"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#999999"></View>
            <LinearLayout
                android:id="@+id/lin_mypacket_withdrawals"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/common_42"
                android:gravity="center"
                android:background="@drawable/selector_mypacket_right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_16"
                    android:textColor="#ffffff"
                    android:text="提现"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>