<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/task_bg">

        <include layout="@layout/tool_bar" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_lin_click_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_14"
            android:text="头像"
            android:textColor="@color/colorTaskerNick"
            android:textSize="@dimen/text_14" />

        <com.wtwd.yusan.widget.view.CircleImageView
            android:id="@+id/circle_img_head"
            android:layout_width="@dimen/common_62"
            android:layout_height="@dimen/common_62"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/common_10"
            android:layout_toLeftOf="@+id/img_1"
            android:src="@mipmap/task_head" />

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_14"
            android:background="@mipmap/publish_right_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/common_14"
        android:background="@color/recycler_line" />

    <RelativeLayout
        android:id="@+id/relative_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:background="@drawable/selector_lin_click_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_14"
            android:text="昵称"
            android:textColor="@color/colorTaskerNick"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_14"
            android:background="@mipmap/publish_right_arrow" />

        <TextView
            android:id="@+id/text_user_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_14"
            android:layout_toLeftOf="@id/img_4"
            android:textColor="@color/colorTaskContent_9"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_14"
        android:background="@color/recycler_line" />

    <RelativeLayout
        android:id="@+id/relative_birthday"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:background="@drawable/selector_lin_click_bg">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_14"
            android:text="生日"
            android:textColor="@color/colorTaskerNick"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/img_birthdata_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_14"
            android:background="@mipmap/publish_right_arrow" />

        <TextView
            android:id="@+id/tv_modifyuser_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/img_birthdata_row"
            android:text="1999-09-01"
            android:textColor="@color/colorTaskContent_9"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_14"
        android:background="@color/recycler_line" />

    <RelativeLayout
        android:id="@+id/relative_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:background="@drawable/selector_lin_click_bg">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_14"
            android:text="性别"
            android:textColor="@color/colorTaskerNick"
            android:textSize="@dimen/text_14" />


        <TextView
            android:id="@+id/tv_modifyuser_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="14dp"
            android:text="男"
            android:textColor="@color/colorTaskContent_9"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_14"
        android:background="@color/recycler_line" />

    <RelativeLayout
        android:id="@+id/relative_height"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:background="@drawable/selector_lin_click_bg">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_14"
            android:text="身高"
            android:textColor="@color/colorTaskerNick"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/img_height_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_14"
            android:background="@mipmap/publish_right_arrow" />

        <EditText
            android:id="@+id/tv_modifyuser_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/img_height_row"
            android:background="@null"
            android:text="175"
            android:textColor="@color/colorTaskContent_9"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:textSize="@dimen/common_12"/>-->

        <Button
            android:id="@+id/btn_withdrawals_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/common_26"
            android:layout_marginLeft="@dimen/common_14"
            android:layout_marginRight="@dimen/common_14"
            android:layout_marginTop="@dimen/common_14"
            android:background="@drawable/selector_task_btn"
            android:text="确认"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

</LinearLayout>